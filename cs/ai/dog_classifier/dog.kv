#:kivy 2.1.0

<ClassifyDogCard>:
    orientation: 'vertical'
    radius: [16, ]
    elevation: 8
    padding: [16, 16, 16, 16]
    spacing: 8
    size_hint: 0.5, 0.5
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    chips: chips

    FitImage:
        source: root.dog_image
        radius: [16, ]
        size_hint_y: 1
        on_touch_down: root.pick_image()

    MDBoxLayout:
        id: chips
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(32)
        spacing: dp(8)

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 8
        padding: [8, 0, 8, 0]
        size_hint_y: None
        height: dp(32)
        MDFlatButton:
            text: "Classify"
            text_color: app.theme_cls.primary_color
            on_release: root.classify()

        MDFlatButton:
            text: "Clear"
            text_color: app.theme_cls.primary_color
            on_release: root.clear()

<ClassifyDog>:
    banner: banner

    MDBanner: 
        id: banner
        type: "two-line"
        over_widget: content
        text: ["Error", "Model haven't loaded. Try again later."]
    
    MDToolbar:
        title: "Dog Classifier"
        elevation: 10
        pos_hint: {'top': 1}
    
    ClassifyDogCard:
        id: content
