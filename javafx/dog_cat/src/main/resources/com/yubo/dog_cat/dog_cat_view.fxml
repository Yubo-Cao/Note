<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.RadioButton?>
<?import io.github.palexdev.materialfx.controls.MFXRadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yubo.dog_cat.DogCatController">
    <padding>
        <Insets topRightBottomLeft="16.0"/>
    </padding>

    <top>
        <ImageView fx:id="image" BorderPane.alignment="TOP_CENTER"/>
    </top>
    <bottom>
        <StackPane styleClass="card">
            <HBox spacing="10.0" fx:id="buttons" BorderPane.alignment="BASELINE_CENTER">
                <MFXRadioButton text="Dog" userData="dog.jpg"/>
                <MFXRadioButton text="Cat" userData="cat.jpg"/>
                <MFXRadioButton text="Turtle" userData="turtle.jpg"/>
            </HBox>
            <padding>
                <Insets topRightBottomLeft="8.0"/>
            </padding>
        </StackPane>
    </bottom>
</BorderPane>
